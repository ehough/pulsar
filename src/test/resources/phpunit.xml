<phpunit
    colors="true"
    stopOnError="true"
    stopOnFailure="true"
	stopOnIncomplete="true"
	stopOnSkipped="true"
	strict="true"
	processIsolation="true">
	<testsuites>
	   <testsuite name="pulsar tests">
	       <directory>../php/</directory>
	       <file>PulsarClassLoaderTest.php</file>
	   </testsuite>
	</testsuites>
	<filter>
		<whitelist>
		   <directory suffix=".php">../../main/php</directory>
		</whitelist>
	</filter>
</phpunit>
